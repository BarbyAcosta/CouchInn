<div class="container master-container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      
      <div class="tab-content">
        
          <div class="panel panel-primary">
            <div class="panel-body">
              
              <div class="col-md-4">

                <%= form_for(@report) do |f| %>
                  <label for=“name"> Ingrese fecha inicial </label>
                  <input type="date" id="f_inicio" name="f_inicio" required>

                  <label for=“name"> Ingrese fecha final </label>
                  <input type="date" id="f_final" name="f_final" required>

                  <%= f.submit 'Enviar' %>
                   
                <% end %>

				
              </div>

              <div class="col-md-8 con_separador">
                <%if @usuarios.nil?%>
                  <h3>Aquí se mostrarán los resultados de su búsqueda.</h3>
                <%else%>
                  <%if  @usuarios.blank?%>
                    <h3>No hay resultados para su búsqueda</h3>
                  <%else%>
                    <table class="table">
                      <tr>
                        <th>Nombre y apellido</th>
                        <th>Fecha de creación</th>
                      </tr>
                      <% @usuarios.all.each do |u| %>
                      <tr>
                        <td><%=u.name%> <%=u.lastname%></td>
                        <td><%=u.created_at.strftime("%d/%m/%y a las %T")%></td>
                      </tr>
                      <%end%>
                      <tr>
                        <th>Ganancias totales</td>
                        <th><%=@total%></th>
                      </tr>
                    </table>
                  <%end%> 
                <%end %>
              </div>

            </div>
          </div>
        </div>

    </div>
  </div>
</div>