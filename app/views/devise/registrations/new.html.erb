<div class="col-md-2 col-sm-2"></div>

<div class="col-md-6 col-sm-8 ">
    <h3 class="text-center">Registro</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

        <div class="form-group">

        <div class="datepicker">
            <label for=“name"> <font face="arial" size="4" color="black"> Antes de comenzar con la registracion a nuestro sistema debemos validar si eres mayor de edad </font> 
              
                <p>Introduce tu edad : 
                  <input type="number" name="edad" min="18" max="99"  required="required">  
         </div>
    

    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:'form-control' %>
    </div>

    <div class="form-group">
    <p> <%= f.label :name, 'Nombre' %> </p>
    <p> <%= f.text_field :name, class:'form-control' %> </p>
    <p> <%= f.label :lastname, 'Apellido' %> </p>
    <p> <%= f.text_field :lastname, class:'form-control' %> </p>
    <p> <%= f.label :dni, 'DNI' %> </p>
    <p> <%= f.text_field :dni, class:'form-control'  %> </p>
    <p> <%= f.label :provincia, 'Provincia' %> </p>
    <p> <%= f.text_field :provincia, class:'form-control'  %> </p>
    <p> <%= f.label :localidad, 'Localidad' %> </p>
    <p> <%= f.text_field :localidad, class:'form-control'  %> </p>
</div>

    <div class="form-group">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
    </div>

    <div class="form-group">
    <%= f.label :Confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
    </div>

    <div class="actions">
    <%= f.submit "Registrarse", class:'btn btn-default' %>
    </div>
    

  <% end %>
<%= render "devise/shared/links" %>
</div>